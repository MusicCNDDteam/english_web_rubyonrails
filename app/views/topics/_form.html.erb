<%= form_for(topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.hidden_field :course_id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
