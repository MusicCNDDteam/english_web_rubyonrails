<p id="notice"><%= notice %></p>

<h1>Quiz Questions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quiz_questions.each do |quiz_question| %>
      <tr>
        <td><%= quiz_question.name %></td>
        <td><%= quiz_question.description %></td>
        <td><%= quiz_question.question_type %></td>
        <td><%= link_to 'Show', quiz_question %></td>
        <td><%= link_to 'Edit', edit_quiz_question_path(quiz_question) %></td>
        <td><%= link_to 'Destroy', quiz_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

