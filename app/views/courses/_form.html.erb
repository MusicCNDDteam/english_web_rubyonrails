<%= form_for(course) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.select :category_id, Category.all.collect { |p| p.id }%>
  <%#= f.hidden_field :category_id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
